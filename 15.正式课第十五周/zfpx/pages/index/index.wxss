.img{
  width:100%;
  height:100%;
}
.know_zf,.zf_things,.public_class{
  padding:20rpx 10rpx;
  text-align: center;
}
.know_zf .til,.zf_things .til,.public_class  .til{
  font-size: 60rpx;
  margin-top:20rpx;
}
.video_box{
  width:100%;
  position: relative;
}
.play_icon image{
  position: absolute;
  z-index:30;
  width:100rpx;
  height:100rpx;
  top:50%;
  left:50%;
  margin-top:-50rpx;
  margin-left:-50rpx;
}
/* 公开课样式 */
.list_box{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.list{
  width:50%;
  padding:10rpx;
  box-sizing: border-box;
}
.list image{
  width:100%;
  height:300rpx;
}
.list text{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:100%;
  display: inline-block;
}